<div class="table-cooks">
  <% @check_mark = "âœ“"
     @false = "x" %>

<table class="table table-striped order-cooks">
    <thead>
      <tr>
        <th scope="col" class="text-center">Name</th>
        <th scope="col" class="text-center">Email</th>
        <th scope="col" class="text-center">Previous Login</th>
        <th scope="col" class="text-center">Last Login</th>
        <th scope="col" class="text-center">Joined</th>
        <th scope="col" class="text-center">Balance</th>
        <th scope="col" class="text-center">Pay Out</th>


      </tr>
    </thead>

    <tbody>
      <% @cooks.each do |cook| %>
        <tr>
          <td><%= cook.first_name %></td>
          <td><%= cook.email %></td>
          <td><%= cook.last_sign_in_at.strftime(Constants::TIME_FORMAT) %></td>
          <td><%= cook.current_sign_in_at.strftime(Constants::TIME_FORMAT) %></td>
          <td><%= cook.created_at.strftime(Constants::TIME_FORMAT) %></td>
          <td>$<%= (cook.balance / 100).round(2) %></td>

      <% end %>
    </tbody>
  </table>

  <br>
</div>
