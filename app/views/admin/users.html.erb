<div class="table-users">
  <% @check_mark = "âœ“"
     @false = "x" %>

<table class="table table-striped order-users">
    <thead>
      <tr>
        <th scope="col" class="text-center">Name</th>
        <th scope="col" class="text-center">Email</th>
        <th scope="col" class="text-center">Previous Login</th>
        <th scope="col" class="text-center">Last Login</th>
        <th scope="col" class="text-center">Joined</th>

      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="text-center"><%= user.first_name %></td>
          <td class="text-center"><%= user.email %></td>
          <td class="text-center"><%= user.last_sign_in_at.strftime(Constants::TIME_FORMAT) %></td>
          <td class="text-center"><%= user.current_sign_in_at.strftime(Constants::TIME_FORMAT) %></td>
          <td class="text-center"><%= user.created_at.strftime(Constants::TIME_FORMAT) %></td>

      <% end %>
    </tbody>
  </table>

  <br>
</div>
