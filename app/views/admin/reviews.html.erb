<!-- Main Container Starts -->
	<div id="main-container" class="container">
	<!-- Breadcrumb Starts -->
		<ol class="breadcrumb">
			<li><%= link_to "Home", root_path  %></li>
      <li><%= controller_name %></li>
      <li class="active"><%= params[:action] %></li>
		</ol>
	<!-- Breadcrumb Ends -->
	<!-- Main Heading Starts -->
		<h2 class="main-heading text-center">
				 Feedback <br />
		</h2>

<section class="registration-area">
  <div class="row">
    <div class="col-sm-6">


    <% @reviews.each do |review| %>
    <!-- Registration Block Starts -->
      <div class="panel panel-smart">
        <div class="panel-heading">
          <h3 class="panel-title inline">Review</h3>
            <%= link_to 'Delete', review_path(action: :delete,id: review.id),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs float-right-content" %>
        </div>
        <div class="panel-body">
    <!-- Review Starts -->
      <div class="tab-pane" id="tab-review">
        <form class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
              <%= review.user.first_name %>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label">Comment</label>
            <div class="col-sm-10">
              <%= review.text %>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label ratings">Ratings</label>
            <div class="col-sm-10">
              <div class="star-ratings-css-meal">
                <div class="star-ratings-css-top-meal" style="width:<%= review.rating.to_f * 20 %>%"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
                <div class="star-ratings-css-bottom"><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span></div>
              </div>
            </div>
            <br />
          </div>
        </form>
      </div>
    <!-- Review Ends -->
      </div>
    </div>
  <% end %>

  <!-- Registration Block Ends -->
    </div>
  </div>
</section>
<!-- Registration Section Ends -->
</div>
<!-- Main Container Ends -->
