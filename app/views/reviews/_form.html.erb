<!-- Main Container Starts -->
	<div id="main-container" class="container">
	<!-- Breadcrumb Starts -->
		<ol class="breadcrumb">
			<li><%= link_to "Home", root_path  %></li>
      <li><%= controller_name %></li>
      <li class="active"><%= params[:action] %></li>
		</ol>
	<!-- Breadcrumb Ends -->
	<!-- Main Heading Starts -->
		<h2 class="main-heading text-center">
			Leave Feedback <br />
		</h2>
	<!-- Main Heading Ends -->

  <!-- Registration Section Starts -->
    <section class="registration-area">
      <div class="row">
        <div class="col-sm-6">
          <!-- Registration Block Starts -->
            <div class="panel panel-smart">
              <div class="panel-heading">
                <h3 class="panel-title">Review Info</h3>
              </div>
              <div class="panel-body">
                <!-- Registration Form Starts -->
                <!-- Personal Information Starts -->
						<%= form_with(model: review, local: true) do |form| %>
						  <% if review.errors.any? %>
						    <div id="error_explanation">
						      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

						      <ul>
						      <% review.errors.full_messages.each do |message| %>
						        <li><%= message %></li>
						      <% end %>
						      </ul>
						    </div>
						  <% end %>
					  <!-- Review Starts -->
					    <div class="tab-pane" id="tab-review">
					      <form class="form-horizontal">
					        <div class="form-group required">
					          <label class="col-sm-2 control-label" for="input-review">Comment</label>
					          <div class="col-sm-10">
					            <%= form.text_area :text, id: "input-review", class: "form-control", placeholder: "Optional but Helpful" %>
					            <div class="help-block">
					            </div>
					          </div>
					        </div>
					        <div class="form-group required">
					          <label class="col-sm-2 control-label ratings">Ratings</label>
					          <div class="col-sm-10">

					            Bad&nbsp;
					            <%= form.radio_button :rating, "1" %>
					            <!-- <input type="radio" name="rating" value="1" /> -->
					            &nbsp;
					            <%= form.radio_button :rating, "2" %>
					            &nbsp;
					            <%= form.radio_button :rating, "3" %>
					            &nbsp;
					            <%= form.radio_button :rating, "4" %>
					            &nbsp;
					            <%= form.radio_button :rating, "5" %>
					            &nbsp;Best
					          </div>
					        </div>
					        <div class="hidden">
					          <%= form.hidden_field :user, :value => @order.user_id %>
					          <%= form.hidden_field :meal, :value => @order.meal_id %>
					          <%= form.hidden_field :order_id, :value => @order.id %>

					        </div>
					        <div class="buttons">
					          <div class="col-sm-offset-2 col-sm-10">
					            <!-- <button type="button" id="button-review" class="btn btn-main actions"> -->
					              <%= form.submit "Submit Review", id: "button-review", class: "btn btn-main actions" %>
					            <!-- </button> -->
					          </div>
					        </div>
					      </form>
					    </div>
					  <!-- Review Ends -->
					  <% end %>
					  <!-- Form Ends -->

</div>
</div>
<!-- Registration Block Ends -->
</div>
</div>
</section>
<!-- Registration Section Ends -->

</div>
<!-- Main Container Ends -->
