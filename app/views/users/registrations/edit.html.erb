<p id="notice"><%= notice %></p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <!-- Registration Block Starts -->
      <div class="edit-registration-title">
          <h2>Edit Profile</h2>
      </div>
        <div class="panel panel-smart edit-registration registration-area">
          <div class="panel-heading">
            <h3 class="panel-title">Sign Up Info</h3>
          </div>
          <div class="panel-body form-horizontal">
          <!-- Registration Form Starts -->
            <!-- Personal Information Starts -->
              <div class="form-group">
                <%= f.label "Name", class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <%= f.text_field :first_name,  autofocus: true, class: "form-control", autocomplete: "first_name", :required => true, placeholder: "Name" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Email", class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <%= f.email_field :email, class: "form-control", autocomplete: "email", :required => true, placeholder: "Email" %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Default Delivery Address", class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <%= f.text_field :default_delivery_address, class: "form-control", autocomplete: "default_delivery_address", :required => false, placeholder: "Ex: 222 Main Street..." %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Phone Number", class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <%= f.text_field :phone_number, class: "form-control", autocomplete: "phone_number", :required => false, placeholder: "Phone Number Without Dashes or Spaces (ex: 1234567890)" %>
                </div>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
            <!-- Personal Information Ends -->
            <!-- New Password Area Starts -->
              <h3 class="panel-heading inner">
                New Password
              </h3>
              <div class="form-group">
                <%= f.label "New Password", class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <!--  TODO Change later. Harcoded password requirement -->
                  <i>(Leave blank if you don't want to change it)</i><br>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New Password (6 characters minimum)"%>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Confirm New Password", class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <!--  TODO Change later. Harcoded password requirement -->
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Re-New Password (6 characters minimum)"%>
                </div>
              </div>
            <!-- New Password Area Ends -->
            <!-- Current Password Area Starts -->
              <h3 class="panel-heading inner">
                Current Password
              </h3>
              <div class="form-group">
                <%= f.label :current_password, class: "col-sm-3 control-label"%>
                <div class="col-sm-9">
                  <!--  TODO Change later. Harcoded password requirement -->
                   <i>(we need your current password to confirm your changes)</i><br>
                  <%= f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Current Password"%>
                </div>
              </div>
           <!-- Current Password Area Ends -->
              <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                  <div class="actions">
                    <%= f.submit "Update Profile", class: "btn btn-black" %>
                  </div>
                </div>
              </div>
          <!-- Registration Form Starts -->
          </div>
        </div>
      <!-- Registration Block Ends -->
  <% end %>
<div class="edit-registration">
  <br/>
  <br/>
  <br/>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,  class: "btn btn-black"%></p>
</div>
